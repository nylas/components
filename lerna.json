{
  "packages": ["components/*"],
  "version": "independent",
  "npmClient": "npm",
  "preid": "canary",
  "command": {
    "version": {
      "allowBranch": "main"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "publish"
    }
  },
  "ignoreChanges": ["**/*.md", "**/node_modules/**"]
}
